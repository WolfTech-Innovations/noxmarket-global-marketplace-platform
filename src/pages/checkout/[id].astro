---
// src/pages/checkout/[id].astro
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getSessionFromCookies } from '@/lib/auth';
import { cosmic } from '@/lib/cosmic';
import type { Product } from '@/types';

const session = getSessionFromCookies(Astro.cookies);

// Redirect if not logged in
if (!session) {
  return Astro.redirect(`/login?redirect=/checkout/${Astro.params.id}`);
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/products');
}

// Fetch product
let product: Product | null = null;
try {
  const response = await cosmic.objects.findOne({
    type: 'products',
    id: id
  });
  product = response.object as Product;
} catch (error) {
  console.error('Error fetching product:', error);
  return Astro.redirect('/404');
}

if (!product || !product.metadata.in_stock) {
  return Astro.redirect('/products');
}

const productImage = product.metadata.product_images?.[0];
const imageUrl = productImage?.imgix_url 
  ? `${productImage.imgix_url}?w=400&h=400&fit=crop&auto=format,compress` 
  : productImage?.url || '';

const price = product.metadata.price || 0;
const seller = product.metadata.seller;
const sellerName = seller?.metadata?.business_name || 'Unknown Seller';
---

<Layout title={`Checkout - ${product.metadata.product_name}`}>
  <Header />

  <main class="py-16 bg-gray-50 min-h-screen">
    <div class="container-custom max-w-6xl">
      <div class="mb-8">
        <a href={`/products/${product.slug}`} class="text-blue-600 hover:underline flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Product
        </a>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Order Summary (Right Side on Desktop) -->
        <div class="lg:col-span-1 order-1 lg:order-2">
          <div class="card-elevated p-6 sticky top-4">
            <h2 class="text-2xl font-medium text-gray-900 mb-6">Order Summary</h2>
            
            <!-- Product Info -->
            <div class="flex gap-4 pb-6 border-b">
              {imageUrl && (
                <div class="w-24 h-24 rounded-xl overflow-hidden bg-gray-100 flex-shrink-0">
                  <img src={imageUrl} alt={product.metadata.product_name} class="w-full h-full object-cover" />
                </div>
              )}
              <div class="flex-1 min-w-0">
                <h3 class="font-semibold text-gray-900 mb-1 line-clamp-2">{product.metadata.product_name}</h3>
                <p class="text-sm text-gray-600">Sold by {sellerName}</p>
                {product.metadata.condition && (
                  <p class="text-xs text-gray-500 mt-1">Condition: {product.metadata.condition}</p>
                )}
              </div>
            </div>

            <!-- Price Breakdown -->
            <div class="py-6 space-y-3">
              <div class="flex justify-between text-gray-700">
                <span>Subtotal</span>
                <span class="font-medium">${price.toFixed(2)}</span>
              </div>
              <div class="flex justify-between text-gray-700">
                <span>Shipping</span>
                <span class="font-medium">Calculated at next step</span>
              </div>
              <div class="flex justify-between text-gray-700">
                <span>Tax</span>
                <span class="font-medium">Calculated at next step</span>
              </div>
            </div>

            <!-- Total -->
            <div class="pt-6 border-t">
              <div class="flex justify-between items-center">
                <span class="text-lg font-semibold text-gray-900">Total</span>
                <span class="text-3xl font-bold text-gray-900">${price.toFixed(2)}</span>
              </div>
              <p class="text-xs text-gray-500 mt-2">Final amount calculated at checkout</p>
            </div>
          </div>
        </div>

        <!-- Checkout Form (Left Side on Desktop) -->
        <div class="lg:col-span-2 order-2 lg:order-1">
          <div class="card-elevated p-8">
            <h1 class="text-4xl font-medium text-gray-900 mb-8">Secure Checkout</h1>

            <!-- Customer Info -->
            <div class="mb-8 p-6 bg-blue-50 rounded-2xl">
              <div class="flex items-center gap-3 mb-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <h2 class="text-lg font-semibold text-gray-900">Purchasing as</h2>
              </div>
              <p class="text-gray-700 font-medium">{session.name}</p>
              <p class="text-sm text-gray-600">{session.email}</p>
            </div>

            <!-- Stripe Checkout Info -->
            <div class="space-y-6">
              <div class="flex items-start gap-3 p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl border border-green-200">
                <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                <div>
                  <h3 class="font-semibold text-green-900 mb-1">Secure Payment via Stripe</h3>
                  <p class="text-sm text-green-800">Your payment information is encrypted and secure. We never store your card details.</p>
                </div>
              </div>

              <!-- Stripe Checkout Button -->
              <form action="/api/create-checkout-session" method="POST" class="space-y-4">
                <input type="hidden" name="productId" value={product.id} />
                <input type="hidden" name="sellerId" value={seller?.id || ''} />
                
                <button 
                  type="submit"
                  class="btn btn-primary w-full text-lg py-4"
                >
                  <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                  Continue to Payment
                </button>
              </form>

              <!-- Trust Badges -->
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 pt-6 border-t">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-2">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                  </div>
                  <p class="text-xs text-gray-600 font-medium">Secure Payment</p>
                </div>
                <div class="text-center">
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-2">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <p class="text-xs text-gray-600 font-medium">Buyer Protection</p>
                </div>
                <div class="text-center">
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-2">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                  </div>
                  <p class="text-xs text-gray-600 font-medium">All Cards Accepted</p>
                </div>
                <div class="text-center">
                  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-2">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <p class="text-xs text-gray-600 font-medium">Fast Shipping</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>