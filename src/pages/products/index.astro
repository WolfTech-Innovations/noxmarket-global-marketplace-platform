---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProductCard from '@/components/ProductCard.astro';
import { getProducts, getCategories } from '@/lib/cosmic';
import type { Product, Category } from '@/types';

const products = await getProducts();
const categories = await getCategories();
---

<Layout title="PC Components - Nox">
  <Header />

  <main class="py-16 min-h-screen bg-gray-50">
    <div class="container-custom">
      <!-- Header with Filters -->
      <div class="mb-12">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 mb-8">
          <div>
            <h1 class="text-5xl md:text-6xl font-medium tracking-tight text-gray-900 mb-3">
              PC Components
            </h1>
            <p class="text-xl text-gray-600">Verified, tested, and benchmarked hardware</p>
          </div>
          
          <div class="flex gap-3">
            <button class="chip bg-white">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
              Filters
            </button>
            <button class="chip bg-white">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
              </svg>
              Sort
            </button>
          </div>
        </div>

        <!-- Trust Badges -->
        <div class="flex flex-wrap gap-3 mb-8">
          {[
            { icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0121 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 11 2c1.821 0 3.532.49 5.003 1.343', label: 'All Parts Verified' },
            { icon: 'M13 10V3L4 14h7v7l9-11h-7z', label: 'Benchmark Tested' },
            { icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', label: 'DOA Protection' },
            { icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z', label: 'Escrow Secured' }
          ].map(badge => (
            <div class="chip bg-blue-50 text-blue-700 border border-blue-200">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={badge.icon} />
              </svg>
              {badge.label}
            </div>
          ))}
        </div>

        <!-- Category Chips -->
        {categories.length > 0 && (
          <div class="flex flex-wrap gap-2">
            <a 
              href="/products" 
              class="chip bg-blue-600 text-white hover:bg-blue-700"
            >
              All Components
            </a>
            {categories.map((category: Category) => (
              <a 
                href={`/products?category=${category.slug}`}
                class="chip bg-white hover:bg-gray-50"
              >
                {category.metadata.category_name}
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Products Grid or Empty State -->
      {products.length === 0 ? (
        <div class="card-elevated p-24 text-center">
          <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-gradient-to-br from-blue-100 to-indigo-100 mb-8">
            <svg class="w-16 h-16 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          
          <h2 class="text-3xl font-medium text-gray-900 mb-3">
            No Components Listed Yet
          </h2>
          <p class="text-gray-600 text-lg mb-8 max-w-md mx-auto">
            Be the first to list verified PC components on Nox and reach thousands of builders!
          </p>
          
          <a href="/become-seller" class="btn btn-primary inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            List Your First Component
          </a>
        </div>
      ) : (
        <>
          <!-- Results Count -->
          <div class="mb-6">
            <p class="text-gray-600">
              <span class="font-semibold text-gray-900">{products.length}</span> verified components available
            </p>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {products.map((product: Product, index: number) => (
              <div 
                class="motion-emphasized"
                style={`animation: fadeInUp 0.6s ease-out ${index * 0.05}s both;`}
              >
                <ProductCard product={product} />
              </div>
            ))}
          </div>
        </>
      )}

      <!-- Info Section -->
      <div class="mt-16 grid md:grid-cols-3 gap-6">
        <div class="card-elevated p-6 bg-gradient-to-br from-blue-50 to-indigo-50 border-l-4 border-blue-600">
          <h3 class="font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0121 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 11 2c1.821 0 3.532.49 5.003 1.343" />
            </svg>
            Verified Components
          </h3>
          <p class="text-sm text-gray-700">Every part includes benchmark results and testing documentation</p>
        </div>

        <div class="card-elevated p-6 bg-gradient-to-br from-green-50 to-emerald-50 border-l-4 border-green-600">
          <h3 class="font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Compatibility Checked
          </h3>
          <p class="text-sm text-gray-700">Automated system ensures parts work together in your build</p>
        </div>

        <div class="card-elevated p-6 bg-gradient-to-br from-purple-50 to-pink-50 border-l-4 border-purple-600">
          <h3 class="font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Secure Payment Protection
          </h3>
          <p class="text-sm text-gray-700">Stripe payments makes paying for parts even easier and even more secure then ever</p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>