---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getSessionFromCookies } from '@/lib/auth';
import { getCategories, cosmic } from '@/lib/cosmic';
import type { Product } from '@/types';

const session = getSessionFromCookies(Astro.cookies);

if (!session || !session.isSeller || !session.sellerId) {
  return Astro.redirect('/login');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/dashboard/products?error=Product not found');
}

// Get the product
let product: Product | null = null;
try {
  const response = await cosmic.objects.findOne({
    type: 'products',
    id: id
  }).props('id,slug,title,metadata');
  
  product = response.object as Product;

  // Verify this product belongs to the seller
  const sellerId = typeof product.metadata.seller === 'string' 
    ? product.metadata.seller 
    : product.metadata.seller?.id;
    
  if (sellerId !== session.sellerId) {
    return Astro.redirect('/dashboard/products?error=Unauthorized');
  }
} catch (error) {
  console.error('Error fetching product:', error);
  return Astro.redirect('/dashboard/products?error=Product not found');
}

const categories = await getCategories();
const errorMessage = Astro.url.searchParams.get('error');
---

<Layout title="Edit Product - NoxMarket">
  <Header />

  <main class="py-16 bg-gray-50 min-h-screen">
    <div class="container-custom max-w-4xl">
      <div class="mb-12">
        <a href="/dashboard/products" class="text-blue-600 hover:underline mb-4 inline-flex items-center gap-2 font-medium">
          ‚Üê Back to Products
        </a>
        <h1 class="text-5xl font-medium tracking-tight text-gray-900 mb-2 mt-4">Edit Component</h1>
        <p class="text-xl text-gray-600">Update component details and verification info</p>
      </div>

      {errorMessage && (
        <div class="mb-8 card-elevated p-4 bg-red-50 border-l-4 border-red-500">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <p class="text-red-800 font-medium">{errorMessage}</p>
          </div>
        </div>
      )}

      <form action="/api/products/update" method="POST" enctype="multipart/form-data" class="space-y-6">
        <input type="hidden" name="product_id" value={product.id} />

        <!-- Product Images -->
        <div class="card-elevated p-8">
          <h2 class="text-2xl font-medium text-gray-900 mb-6">Product Images</h2>
          
          <div class="space-y-4">
            {product.metadata.product_images && (
              <div>
                <p class="text-sm font-medium text-gray-700 mb-3">Current Images</p>
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-4">
                  {(Array.isArray(product.metadata.product_images) 
                    ? product.metadata.product_images 
                    : [product.metadata.product_images]
                  ).map((img: any) => (
                    <img 
                      src={img.url || img.imgix_url || img} 
                      alt="Product" 
                      class="w-full h-32 object-cover rounded-lg border-2 border-gray-200"
                    />
                  ))}
                </div>
              </div>
            )}
            
            <div>
              <label for="product_images" class="block text-sm font-medium text-gray-700 mb-2">
                Upload New Images (Optional)
              </label>
              <input
                type="file"
                id="product_images"
                name="product_images"
                accept="image/*"
                multiple
                class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
              />
              <p class="text-sm text-gray-500 mt-2">Upload up to 10 images. Leave empty to keep current images.</p>
            </div>
          </div>
        </div>

        <!-- Basic Info -->
        <div class="card-elevated p-8">
          <h2 class="text-2xl font-medium text-gray-900 mb-6">Basic Information</h2>
          <div class="space-y-5">
            <div>
              <label for="product_name" class="block text-sm font-medium text-gray-700 mb-2">
                Product Name <span class="text-red-500">*</span>
              </label>
              <input type="text" id="product_name" name="product_name" value={product.metadata.product_name} class="input w-full" required />
            </div>

            <div>
              <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                Description <span class="text-red-500">*</span>
              </label>
              <textarea id="description" name="description" rows="5" class="input w-full resize-none" required>{product.metadata.description}</textarea>
            </div>

            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
                  Price (USD) <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                  <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                  <input type="number" id="price" name="price" step="0.01" min="0" value={product.metadata.price} class="input w-full pl-8" required />
                </div>
              </div>

              <div>
                <label for="stock_quantity" class="block text-sm font-medium text-gray-700 mb-2">
                  Stock Quantity <span class="text-red-500">*</span>
                </label>
                <input type="number" id="stock_quantity" name="stock_quantity" min="0" value={product.metadata.stock_quantity} class="input w-full" required />
              </div>
            </div>

            {categories.length > 0 && (
              <div>
                <label for="category" class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                <select id="category" name="category" class="input w-full">
                  <option value="">Select a category</option>
                  {categories.map((category: any) => (
                    <option value={category.id} selected={product.metadata.category === category.id}>
                      {category.metadata.category_name}
                    </option>
                  ))}
                </select>
              </div>
            )}
          </div>
        </div>

        <!-- Verification & Testing -->
        <div class="card-elevated p-8">
          <h2 class="text-2xl font-medium text-gray-900 mb-6">Verification & Testing</h2>
          <div class="space-y-5">
            <div>
              <label for="condition" class="block text-sm font-medium text-gray-700 mb-2">
                Condition <span class="text-red-500">*</span>
              </label>
              <select id="condition" name="condition" class="input w-full" required>
                <option value="">Select condition</option>
                <option value="new" selected={product.metadata.condition === 'new'}>Brand New - Sealed</option>
                <option value="like-new" selected={product.metadata.condition === 'like-new'}>Like New - Opened, never used</option>
                <option value="excellent" selected={product.metadata.condition === 'excellent'}>Excellent - Lightly used</option>
                <option value="good" selected={product.metadata.condition === 'good'}>Good - Normal wear</option>
                <option value="fair" selected={product.metadata.condition === 'fair'}>Fair - Heavy use, fully functional</option>
              </select>
            </div>

            <div>
              <label for="benchmark_results" class="block text-sm font-medium text-gray-700 mb-2">
                Benchmark Results <span class="text-red-500">*</span>
              </label>
              <textarea id="benchmark_results" name="benchmark_results" rows="3" class="input w-full resize-none" placeholder="e.g., 3DMark Time Spy: 12,543 | Cinebench R23: 18,245" required>{product.metadata.benchmark_results || ''}</textarea>
            </div>

            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="testing_notes" class="block text-sm font-medium text-gray-700 mb-2">Testing Notes</label>
                <textarea id="testing_notes" name="testing_notes" rows="3" class="input w-full resize-none" placeholder="Hours tested, temps, etc.">{product.metadata.testing_notes || ''}</textarea>
              </div>
              <div>
                <label for="warranty_info" class="block text-sm font-medium text-gray-700 mb-2">Warranty Info</label>
                <input type="text" id="warranty_info" name="warranty_info" value={product.metadata.warranty_info || ''} class="input w-full" placeholder="e.g., 2 years remaining" />
              </div>
            </div>
          </div>
        </div>

        <!-- Compatibility -->
        <div class="card-elevated p-8">
          <h2 class="text-2xl font-medium text-gray-900 mb-6">Compatibility</h2>
          <div class="space-y-5">
            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="socket_type" class="block text-sm font-medium text-gray-700 mb-2">Socket/Interface</label>
                <input type="text" id="socket_type" name="socket_type" value={product.metadata.socket_type || ''} class="input w-full" placeholder="e.g., LGA 1700, AM5" />
              </div>
              <div>
                <label for="form_factor" class="block text-sm font-medium text-gray-700 mb-2">Form Factor</label>
                <input type="text" id="form_factor" name="form_factor" value={product.metadata.form_factor || ''} class="input w-full" placeholder="e.g., ATX, M.2 2280" />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="power_requirements" class="block text-sm font-medium text-gray-700 mb-2">Power Requirements</label>
                <input type="text" id="power_requirements" name="power_requirements" value={product.metadata.power_requirements || ''} class="input w-full" placeholder="e.g., 750W+ recommended" />
              </div>
              <div>
                <label for="dimensions" class="block text-sm font-medium text-gray-700 mb-2">Dimensions (L x W x H)</label>
                <input type="text" id="dimensions" name="dimensions" value={product.metadata.dimensions || ''} class="input w-full" placeholder="e.g., 300mm x 120mm x 40mm" />
              </div>
            </div>
          </div>
        </div>

        <!-- Availability -->
        <div class="card-elevated p-8">
          <h2 class="text-2xl font-medium text-gray-900 mb-6">Availability</h2>
          <label class="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" name="in_stock" value="true" checked={product.metadata.in_stock} class="w-5 h-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
            <span class="text-gray-700 font-medium">Product is in stock and available for purchase</span>
          </label>
        </div>

        <!-- Actions -->
        <div class="card-elevated p-6 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a href="/dashboard/products" class="text-gray-600 hover:underline font-medium">Cancel</a>
            <button type="button" onclick={`if(confirm('Delete this product?')) window.location.href='/api/products/delete?id=${product.id}'`} class="text-red-600 hover:underline font-medium">
              Delete Product
            </button>
          </div>
          <button type="submit" class="btn btn-primary px-8">Save Changes</button>
        </div>
      </form>
    </div>
  </main>

  <Footer />
</Layout>