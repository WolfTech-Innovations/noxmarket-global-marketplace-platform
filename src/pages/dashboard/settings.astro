---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getSessionFromCookies } from '@/lib/auth';
import { getSeller } from '@/lib/cosmic';

const session = getSessionFromCookies(Astro.cookies);

if (!session || !session.isSeller || !session.sellerId) {
  return Astro.redirect('/login');
}

const sellerProfile = await getSeller(session.sellerId);
const errorMessage = Astro.url.searchParams.get('error');
const successMessage = Astro.url.searchParams.get('success');

const hasStripeAccount = sellerProfile?.metadata?.stripe_account_id;
const isVerified = hasStripeAccount && sellerProfile?.metadata?.stripe_onboarding_complete;
---

<Layout title="Store Settings - NoxMarket">
  <Header />

  <main class="py-16 bg-gray-50 min-h-screen">
    <div class="container-custom max-w-4xl">
      <!-- Header -->
      <div class="mb-12">
        <a href="/dashboard" class="text-blue-600 hover:underline mb-4 inline-flex items-center gap-2 font-medium">
          ← Back to Dashboard
        </a>
        <h1 class="text-5xl font-medium tracking-tight text-gray-900 mb-2 mt-4">Store Settings</h1>
        <p class="text-xl text-gray-600">Manage your store information and payment settings</p>
      </div>

      <!-- Success/Error Messages -->
      {successMessage && (
        <div class="mb-6 card-elevated p-4 bg-green-50 border-l-4 border-green-500">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <p class="text-green-800 font-medium">{successMessage}</p>
          </div>
        </div>
      )}

      {errorMessage && (
        <div class="mb-6 card-elevated p-4 bg-red-50 border-l-4 border-red-500">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <p class="text-red-800 font-medium">{errorMessage}</p>
          </div>
        </div>
      )}

      <!-- Settings Form -->
      <form action="/api/seller/update-settings" method="POST" class="space-y-6">
        <!-- Business Information -->
        <div class="card-elevated p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-blue-100 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-medium text-gray-900">Business Information</h2>
              <p class="text-gray-600">Your store's public information</p>
            </div>
          </div>

          <div class="space-y-5">
            <div>
              <label for="business_name" class="block text-sm font-medium text-gray-700 mb-2">
                Business Name
              </label>
              <input
                type="text"
                id="business_name"
                name="business_name"
                value={sellerProfile?.metadata?.business_name || ''}
                class="input w-full"
                required
              />
            </div>

            <div>
              <label for="store_description" class="block text-sm font-medium text-gray-700 mb-2">
                Store Description
              </label>
              <textarea
                id="store_description"
                name="store_description"
                rows="4"
                class="input w-full resize-none"
                placeholder="Tell customers about your store..."
              >{sellerProfile?.metadata?.store_description || ''}</textarea>
              <p class="text-sm text-gray-500 mt-2">This will be displayed on your store page</p>
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Contact Phone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                value={sellerProfile?.metadata?.phone || ''}
                class="input w-full"
                placeholder="+1 (555) 000-0000"
              />
            </div>
          </div>
        </div>

        <!-- Payment Settings -->
        <div class="card-elevated p-8">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-green-100 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-medium text-gray-900">Payment Settings</h2>
              <p class="text-gray-600">Verify your identity to receive payments</p>
            </div>
          </div>

          {isVerified ? (
            <div class="p-6 bg-green-50 rounded-2xl border-2 border-green-200">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="font-semibold text-green-900 mb-1">✓ Verified & Ready</p>
                  <p class="text-green-800 mb-3">Your account is verified and ready to receive payments!</p>
                  <p class="text-xs text-green-700 font-mono bg-green-100 px-3 py-2 rounded-lg inline-block">
                    {sellerProfile.metadata.stripe_account_id}
                  </p>
                </div>
              </div>
            </div>
          ) : hasStripeAccount ? (
            <div class="p-6 bg-amber-50 rounded-2xl border-2 border-amber-200">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="flex-1">
                  <p class="font-semibold text-amber-900 mb-1">Verification In Progress</p>
                  <p class="text-amber-800 mb-4">Complete your verification to start receiving payments.</p>
                  <form action="/api/seller/create-connect-account" method="POST">
                    <button type="submit" class="btn btn-primary">
                      Continue Verification
                    </button>
                  </form>
                </div>
              </div>
            </div>
          ) : (
            <div class="space-y-4">
              <div class="p-6 bg-blue-50 rounded-2xl border-2 border-blue-200">
                <div class="flex gap-3">
                  <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div class="text-blue-900">
                    <p class="font-semibold mb-2">Get Verified to Accept Payments</p>
                    <p class="text-blue-800 mb-3">We use Stripe to ensure secure payments. Quick 5-minute setup.</p>
                    <ul class="list-disc list-inside space-y-1 text-blue-800 text-sm">
                      <li>Bank account information</li>
                      <li>ID verification</li>
                      <li>Tax information (if applicable)</li>
                    </ul>
                  </div>
                </div>
              </div>

              <form action="/api/seller/create-connect-account" method="POST">
                <button type="submit" class="btn btn-primary w-full text-lg py-4">
                  Start Verification with Stripe →
                </button>
              </form>
            </div>
          )}
        </div>

        <!-- Save Button -->
        <div class="card-elevated p-6 flex items-center justify-between">
          <p class="text-gray-600">
            <span class="text-red-500">*</span> Required fields must be filled
          </p>
          <button type="submit" class="btn btn-primary px-8">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </main>

  <Footer />
</Layout>