---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getSessionFromCookies } from '@/lib/auth';
import { getSellerOrders } from '@/lib/cosmic';

const session = getSessionFromCookies(Astro.cookies);

if (!session || session.userType !== 'seller' || !session.sellerId) {
  return Astro.redirect('/login');
}

const orders = await getSellerOrders(session.sellerId);

// Calculate stats
const totalOrders = orders.length;
const pendingOrders = orders.filter(o => o.metadata.order_status === 'pending').length;
const totalRevenue = orders.reduce((sum, order) => {
  if (order.metadata.payment_status === 'paid') {
    return sum + (order.metadata.order_total || 0);
  }
  return sum;
}, 0);
---

<Layout title="Seller Dashboard - NoxMarket">
  <Header />
  
  <main class="py-12">
    <div class="container-custom">
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">Seller Dashboard</h1>
        <p class="text-gray-600">Manage your products and orders</p>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">Total Orders</p>
              <p class="text-3xl font-bold">{totalOrders}</p>
            </div>
            <div class="w-12 h-12 bg-accent bg-opacity-10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">Pending Orders</p>
              <p class="text-3xl font-bold">{pendingOrders}</p>
            </div>
            <div class="w-12 h-12 bg-blue-500 bg-opacity-10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>
        
        <div class="card p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm mb-1">Total Revenue</p>
              <p class="text-3xl font-bold">${totalRevenue.toFixed(2)}</p>
            </div>
            <div class="w-12 h-12 bg-green-500 bg-opacity-10 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent Orders -->
      <div class="card p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold">Recent Orders</h2>
          <a href="/dashboard/orders" class="text-accent font-medium hover:underline">
            View All
          </a>
        </div>
        
        {orders.length === 0 ? (
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
            </svg>
            <h3 class="text-xl font-bold mb-2">No Orders Yet</h3>
            <p class="text-gray-600">Your orders will appear here</p>
          </div>
        ) : (
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Order #</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Customer</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Product</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Total</th>
                  <th class="text-left py-3 px-4 font-medium text-gray-600">Status</th>
                </tr>
              </thead>
              <tbody>
                {orders.slice(0, 5).map((order) => (
                  <tr class="border-b border-gray-100 hover:bg-gray-50">
                    <td class="py-3 px-4 font-medium">{order.metadata.order_number}</td>
                    <td class="py-3 px-4">
                      <div>
                        <p class="font-medium">{order.metadata.buyer_name}</p>
                        <p class="text-sm text-gray-600">{order.metadata.buyer_email}</p>
                      </div>
                    </td>
                    <td class="py-3 px-4">
                      {order.metadata.product?.metadata?.product_name || 'Unknown'}
                    </td>
                    <td class="py-3 px-4 font-medium">
                      ${order.metadata.order_total.toFixed(2)}
                    </td>
                    <td class="py-3 px-4">
                      <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                        order.metadata.order_status === 'delivered' ? 'bg-green-100 text-green-800' :
                        order.metadata.order_status === 'shipped' ? 'bg-blue-100 text-blue-800' :
                        order.metadata.order_status === 'processing' ? 'bg-yellow-100 text-yellow-800' :
                        'bg-gray-100 text-gray-800'
                      }`}>
                        {order.metadata.order_status}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>