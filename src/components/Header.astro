---
import { getSessionFromCookies } from '@/lib/auth';

const session = getSessionFromCookies(Astro.cookies);
const currentPath = Astro.url.pathname;
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 text-2xl font-bold text-primary hover:text-accent transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <span>NoxMarket</span>
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class={`text-sm font-medium transition-colors ${currentPath === '/' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`}
        >
          Home
        </a>
        <a 
          href="/products" 
          class={`text-sm font-medium transition-colors ${currentPath.startsWith('/products') ? 'text-primary' : 'text-gray-600 hover:text-primary'}`}
        >
          Products
        </a>
        <a 
          href="/search" 
          class={`text-sm font-medium transition-colors ${currentPath === '/search' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`}
        >
          Search
        </a>
        
        {session ? (
          <>
            {session.userType === 'seller' && (
              <a 
                href="/dashboard" 
                class={`text-sm font-medium transition-colors ${currentPath.startsWith('/dashboard') ? 'text-primary' : 'text-gray-600 hover:text-primary'}`}
              >
                Dashboard
              </a>
            )}
            <a 
              href="/profile" 
              class={`text-sm font-medium transition-colors ${currentPath === '/profile' ? 'text-primary' : 'text-gray-600 hover:text-primary'}`}
            >
              Profile
            </a>
            <form action="/api/auth/logout" method="POST" class="inline">
              <button type="submit" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
                Logout
              </button>
            </form>
          </>
        ) : (
          <>
            <a href="/login" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
              Login
            </a>
            <a href="/signup" class="btn btn-primary text-sm">
              Sign Up
            </a>
          </>
        )}
      </div>
      
      <button id="mobile-menu-button" class="md:hidden text-primary">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 pt-4">
      <div class="flex flex-col gap-4">
        <a href="/" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
          Home
        </a>
        <a href="/products" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
          Products
        </a>
        <a href="/search" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
          Search
        </a>
        {session ? (
          <>
            {session.userType === 'seller' && (
              <a href="/dashboard" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
                Dashboard
              </a>
            )}
            <a href="/profile" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
              Profile
            </a>
            <form action="/api/auth/logout" method="POST">
              <button type="submit" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors text-left">
                Logout
              </button>
            </form>
          </>
        ) : (
          <>
            <a href="/login" class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
              Login
            </a>
            <a href="/signup" class="btn btn-primary text-sm inline-block text-center">
              Sign Up
            </a>
          </>
        )}
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>